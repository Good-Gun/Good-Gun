<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintVertical_chainStyle="spread">

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:text="OOO"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:id="@+id/tv_home_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님의 영양 정보"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_home_name"
        app:layout_constraintTop_toTopOf="@id/tv_home_name" />

    <ImageView
        android:id="@+id/iv_scan_num"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_barcode_20dp"
        android:scaleType="centerInside"
        android:background="@drawable/circle_outline"/>

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/iv_scan_num"
        app:layout_constraintStart_toStartOf="@id/iv_scan_num"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle_outline"
        android:text="1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/red"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/view_nutrition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_name">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:backgroundTint="@color/white"

        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_name">

        <TextView
            android:id="@+id/tv_home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="날짜"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/iv_home_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/baseline_keyboard_arrow_left_24"
            app:layout_constraintEnd_toStartOf="@id/tv_home_date"
            app:layout_constraintTop_toTopOf="@id/tv_home_date" />

        <ImageButton
            android:id="@+id/iv_home_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="321dp"
            android:background="@null"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            app:layout_constraintStart_toEndOf="@id/tv_home_date"
            app:layout_constraintTop_toTopOf="@id/tv_home_date" />

        <LinearLayout
            android:id="@+id/view_calorie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/box_radius_10dp"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home_date">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="@string/calorie"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <com.appersiano.progressimage.ProgressImage
                android:id="@+id/pb_home_calorie"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:imageShadowColor="@color/bright_grey"
                app:srcImage="@drawable/baseline_cloud_24"/>

            <TextView
                android:id="@+id/tv_home_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_carbo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box_radius_10dp"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toTopOf="@id/view_calorie"
            app:layout_constraintStart_toEndOf="@id/view_calorie"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carbohydrate"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_home_carbohydrates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_fat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box_radius_10dp"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/view_carbo"
            app:layout_constraintStart_toEndOf="@id/view_calorie"
            app:layout_constraintBottom_toTopOf="@id/view_protein"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fat"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_home_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_protein"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box_radius_10dp"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintBottom_toBottomOf="@id/view_calorie"
            app:layout_constraintStart_toEndOf="@id/view_calorie"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/protein"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_home_proteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_home_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:elevation="10dp"
        android:background="@drawable/box_radius_10dp"
        android:backgroundTint="@color/theme2"
        app:layout_constraintTop_toBottomOf="@id/view_nutrition">

        <TextView
            android:id="@+id/tv_home_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_food_bank_24"
            android:text="식단 정보"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:text="더보기"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:drawableTint="@color/black"/>

        <TextView
            android:id="@+id/tv_no_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="@string/no_food_today"
            style="@style/foodText"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home_info_title"
            tools:layout_editor_absoluteX="15dp"
            android:textAlignment="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home_info_title"
            tools:layout_editor_absoluteX="15dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_home_recent">

        <LinearLayout
            android:id="@+id/home_btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            android:background="@drawable/box_radius_10dp"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_outline"
                android:src="@mipmap/ic_good_gun_round"
                android:scaleType="centerCrop"
                android:clipToOutline="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="국건 솔루션"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/home_btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:background="@drawable/box_radius_10dp"
            android:backgroundTint="@color/theme1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/circle_outline"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_fastfood_24"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                app:tint="@color/theme1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="식단 추천"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:elevation="10dp"
            android:background="@drawable/box_radius_10dp"
            android:backgroundTint="@color/theme3"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/circle_outline"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_bar_chart_24"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                app:tint="@color/theme3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="통계 보기"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>