<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorPurple</item>
        <item name="colorAccent">@color/colorRed</item>
    </style>

    <!--splash 화면에 사용될 테마-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--식단 추천 메뉴에서 쓰이는 텍스트 스타일-->
    <style name="foodText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/extra_grey</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="foodTitle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/extra_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="checkBox_disable">
        <item name="android:background">@drawable/checkbox_disable</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@drawable/button_round_white</item>
    </style>

    <style name="NutritionStyle">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/box_radius_10dp</item>
        <item name="android:backgroundTint">@color/bright_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>